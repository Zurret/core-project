{% extends "Layout/gameLayout.twig" %}
{% block content %}

<form action="{{ internUrl('/account/settings') }}" method="post" autocomplete="off"
    class="uk-form-horizontal uk-margin-large">

    <div class="uk-margin">
        <label class="uk-form-label uk-text-bold uk-text-right" for="account_id">Account ID</label>
        <div class="uk-form-controls">
            <input class="uk-input uk-form-blank" name="account_id" id="account_id" type="number"
                value="{{account.getId}}" readonly>
        </div>
    </div>

    <div class="uk-margin">
        <label class="uk-form-label uk-text-bold uk-text-right" for="player_id">Player ID</label>
        <div class="uk-form-controls">
            <input class="uk-input uk-form-blank" name="player_id" id="player_id" type="number" value="{{player.getId}}"
                readonly>
        </div>
    </div>

    <h3>Account</h3>

    <div class="uk-margin">
        <label class="uk-form-label uk-text-bold uk-text-right" for="account_email">E-Mail Address</label>
        <div class="uk-form-controls">
            <input class="uk-input" type="text" name="account_email" id="account_email" value="{{account.getEmail}}">
        </div>
    </div>

    <div class="uk-margin">
        <label class="uk-form-label uk-text-bold uk-text-right" for="account_password">Passwort Ã¤ndern</label>
        <div class="uk-form-controls uk-grid-collapse" uk-grid>
            <div class="uk-width-1-2@s">
                <input class="uk-input" type="password" name="account_password">
            </div>
            <div class="uk-width-1-2@s">
                <input class="uk-input" type="password" name="account_password_repeat">
            </div>
        </div>
    </div>

    <h3>Spieler</h3>

    <div class="uk-margin">
        <label class="uk-form-label uk-text-bold uk-text-right" for="player_name">Name</label>
        <div class="uk-form-controls">
            <input class="uk-input" type="text" name="player_name" value="{{player.getName}}">
        </div>
    </div>

    <button class="uk-button uk-button-default" type="reset">Verwerfen</button>
    <button class="uk-button uk-button-primary" type="submit">Speichern</button>
</form>




{% endblock %}