<html lang="de">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <title>{{ page_title }}</title>

    <link type="text/css" href="/css/normalize.css?v={{ core_version }}" />
    <link rel="stylesheet" type="text/css" href="/css/main.css?v={{ core_version }}" />
    
    <script type="text/javascript" src="/js/main.js?v={{ core_version }}"></script>
</head>

<body>
    <div id="wrap">
        <header id="header">
            <div class="top">
                &nbsp; v.{{ core_version }}
            </div>
            <div class="title">
                {{ core_name }}
                <div class="subtitle">Derzeit in der Entwicklung!</div>
            </div>
            <nav id="nav">
                <ul>
                    <li><a href="{{ url('/') }}">Hauptseite</a></li>
                    {% if auth.isLoggedIn %}
                    <li><a href="{{ url('/game/maindesk') }}">Game</a></li>
                    <li><a href="{{ url('/logout/' ~ core_token) }}" onclick="return confirm('Willst du dich wirklich ausloggen?');">Ausloggen</a></li>
                    {% else %}
                    <li><a href="{{ url('/register') }}">Registrieren</a></li>
                    <li><a href="{{ url('/login') }}">Login</a></li>
                    {% endif %}
                </ul>
                <div class="clear"></div>
            </nav>
        </header>

        <section id="content">
            <h1>{{ site_title }}</h1>
            {% if infos %}
            <div style="background-color: #3f3f3f; color: #cacaca; padding: 10px 15px;">
                {% for info in infos %}
                <div>{{ info|e }}</div>
                {% endfor %}
            </div>
            {% endif %}
            <noscript>
                <div class="alert alert-error">
                    Bitte aktiviere JavaScript in deinem Browser.
                </div>
            </noscript>
            {% block content %} ... {% endblock %}
        </section>

        <aside id="sidebar">
            <div class="panel">
                <h3>Status</h3>
                <div style="text-align: center;" class="gamestate gamestate_1">
                    <span>Online</span>
                </div>
            </div>
            {% if auth.isLoggedIn %}
            <div class="panel">
                <h3>Eingeloggt</h3>
                <p>Hallo {{ user.player.getName }}</p>
            </div>
            {% endif %}
        </aside>

        <footer id="footer">
            <div class="copyright">
                &copy; 2021 &ndash; {{ "now"|date("Y") }} &bull; Made with <span
                    style="color:#a30000;font-size:10px;">&#10084;</span> |
                <a href="{{ url('/cookies') }}" class="nav-link">Cookies</a> |
                <a href="{{ url('/privacy') }}" class="nav-link">Datenschutzerkl√§rung</a> |
                <a href="{{ url('/imprint') }}" class="nav-link">Impressum</a>
            </div>
        </footer>

        <div id="debug" style="text-align:center;color:#333333;font-size:9px;margin-top:15px;">
            Rendered in {{ benchmark.executionTime }} - Memory usage: {{ benchmark.memoryPeakUsage }}
        </div>
    </div>
</body>

</html>